using UnityEngine;
using System.Collections;
using UnityEngine.SceneManagement;

public class MainMenuController : MonoBehaviour {
    public void OnPlay() {
        SceneManager.LoadScene(1);
    }

    public void OnHighscores() {
        SceneManager.LoadScene(2);
    }

    public void OnQuit() {
        Application.Quit();
    }
}

